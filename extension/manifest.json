{
  "manifest_version": 3,
  "name": "MindTube Extension",
  "version": "1.1",
  "description": "Show MindTube mindmaps on YouTube videos",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  },
  "icons": {
    "16": "icons/logo1.png",
    "48": "icons/logo1.png",
    "128": "icons/logo1.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost:8000/*",
    "https://api.mindtube.duckdns.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo1.png",
      "48": "icons/logo1.png",
      "128": "icons/logo1.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["dist/content.bundle.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["iframe.html", "dist/page_script.bundle.js", "dist/iframe.bundle.js", "js/d3.min.js", "js/markmap-lib.min.js", "js/markmap-view.min.js", "js/lib/*", "icons/*", "font-awesome/*", "styles.css"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
} 